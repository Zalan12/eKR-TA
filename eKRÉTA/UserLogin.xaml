<Window x:Class="eKRÉTA.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eKRÉTA"
        mc:Ignorable="d"
        Title="UserLogin"
        Height="450"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Width="300"
        FontSize="20"
        d:DesignHeight="500"
        d:DesignWidth="400">
    <StackPanel>
        <StackPanel Margin="0,50,0,100"
                    HorizontalAlignment="Center">
            <TextBlock>Ez egy cím</TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBlock>Felhasználónév:</TextBlock>
            <TextBox x:Name="loginUserText"></TextBox>
        </StackPanel>
        <StackPanel>
            <TextBlock>Jelszó:</TextBlock>
            <PasswordBox x:Name="loginPasswordText"></PasswordBox>
        </StackPanel>
        <StackPanel Margin="0,20,0,0">
            <Button x:Name="loginBtn"
                    Click="loginBtn_Click"
                    Margin="0,0,0,10">Login</Button>
            <Button x:Name="exitBtn"
                    Click="exitBtn_Click"
                    Margin="0,0,0,10">Mégsem</Button>
        </StackPanel>
    </StackPanel>
</Window>
